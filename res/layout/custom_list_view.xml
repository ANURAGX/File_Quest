<LinearLayout 
        android:background="@color/transparent"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent" 
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android">
   <LinearLayout 
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:id="@+id/file_gallery_layout">
  		<ScrollView 
  		     android:scrollbars="none"
   			 android:layout_width="match_parent"
    		 android:layout_height="match_parent">
		   <LinearLayout 
        		android:paddingTop="10dp"
        		android:paddingLeft="5dp"
        		android:paddingRight="5dp"
        		android:layout_width="fill_parent"
        		android:layout_height="wrap_content"
        		android:orientation="vertical">
        		<LinearLayout
        			android:layout_width="fill_parent"
        			android:layout_height="wrap_content"
        			android:orientation="horizontal">
        			
        		    <LinearLayout 
    	    			android:id="@+id/fav"
    	    			android:onClick="onClick"
    	    			android:layout_margin="3dp"
    	    			android:clickable="true"
    	    			android:focusable="true"
    	    			android:background="@drawable/fav_selector_hd"
    	    			android:layout_gravity="center"
    	    			android:gravity="center"
    	    			android:layout_width="fill_parent"
    	    			android:layout_height="wrap_content"
    	    			android:layout_weight="1"
    	    			android:orientation="vertical"> 
    			  	    <TextView 
    			  	        android:textColor="@android:color/white"
    	       				android:textStyle="bold"
    	       				android:layout_width="wrap_content"
    	       				android:layout_height="wrap_content"
    	       				android:text="@string/favorite"/>
    	    			<ImageButton 
	   	       				android:clickable="false"
    	       				android:layout_width="wrap_content"
    	       				android:layout_height="wrap_content"
    	       				android:background="@drawable/favorite_fav_hd"/>
    					<TextView 
    					    android:textColor="@android:color/white"
    					    android:id="@+id/fSize"
    	       				android:layout_width="wrap_content"
    	       				android:layout_height="wrap_content"
    	       				android:text="@string/totalfolder"/>
    					<TextView 
    					    android:textColor="@android:color/white"
    					    android:id="@+id/fFiles"
    	       				android:layout_width="wrap_content"
    	       				android:layout_height="wrap_content"
    	       				android:text="@string/totalfiles"/>
    	    			
    					
    				</LinearLayout>
        		    
        		    
    				<LinearLayout 
    	    			android:id="@+id/music"
    	    			android:onClick="onClick"
    	    			android:layout_margin="3dp"
    	    			android:clickable="true"
    	    			android:focusable="true"
    	    			android:background="@drawable/music_selector_hd"
    	    			android:layout_gravity="center"
    	    			android:gravity="center"
    	    			android:layout_width="fill_parent"
    	    			android:layout_height="wrap_content"
    	    			android:layout_weight="1"
    	    			android:orientation="vertical"> 
    			  	    <TextView 
    			  	        android:textColor="@android:color/white"
    	       				android:textStyle="bold"
    	       				android:layout_width="wrap_content"
    	       				android:layout_height="wrap_content"
    	       				android:text="@string/music"/>
    	    			<ImageButton 
	   	       				android:clickable="false"
    	       				android:layout_width="wrap_content"
    	       				android:layout_height="wrap_content"
    	       				android:background="@drawable/music_fav_hd"/>
    					<TextView 
    					    android:textColor="@android:color/white"
    					    android:id="@+id/mSize"
    	       				android:layout_width="wrap_content"
    	       				android:layout_height="wrap_content"
    	       				android:text="@string/zerosize"/>
    					<TextView 
    					    android:textColor="@android:color/white"
    					    android:id="@+id/mFiles"
    	       				android:layout_width="wrap_content"
    	       				android:layout_height="wrap_content"
    	       				android:text="@string/zerofiles"/>
    	    			
    					
    				</LinearLayout>
    	
    				
    				
    			</LinearLayout>
    
  				<LinearLayout
       				android:layout_width="fill_parent"
       				android:layout_height="wrap_content"
       				android:orientation="horizontal">
    				
  				    
  				    <LinearLayout 
    				    android:id="@+id/apps"
    	   				android:layout_margin="3dp"
    	   				android:clickable="true"
    	   				android:focusable="true"
    	   				android:background="@drawable/app_selector_hd"
    	   				android:layout_gravity="center"
    	    			android:gravity="center"
    	    			android:layout_width="fill_parent"
    	    			android:layout_height="wrap_content"
    	    			android:layout_weight="1"
    	    			android:orientation="vertical">   
    	   
    	  				<TextView 
    	  				    android:textColor="@android:color/white"
    	        			android:textStyle="bold"
    	        			android:layout_width="wrap_content"
    	        			android:layout_height="wrap_content"
    	        			android:text="@string/apps"/>
    	    			<ImageButton 
    	        			android:clickable="false"
    	        			android:layout_width="wrap_content"
    	        			android:layout_height="wrap_content"
    	        			android:background="@drawable/app_fav_hd"/>
    					<TextView 
    					    android:textColor="@android:color/white"
    					    android:id="@+id/aSize"
    	        			android:layout_width="wrap_content"
    	        			android:layout_height="wrap_content"
    	        			android:text="@string/zerosize"/>
    					<TextView 
    					    android:textColor="@android:color/white"
    					    android:id="@+id/aFiles"
    	        			android:layout_width="wrap_content"
    	        			android:layout_height="wrap_content"
    	        			android:text="@string/zerofiles"/>
    					 
    				</LinearLayout>
  				      				    
   					
   	
    				<LinearLayout 
    					    android:id="@+id/photos"
    	    				android:orientation="vertical"
    	    				android:layout_margin="3dp"
    	   					android:clickable="true"
    	    				android:focusable="true"
    	    				android:background="@drawable/image_selector_hd"
    	    				android:layout_gravity="center"
    	    				android:gravity="center"
    	    				android:layout_width="fill_parent"
    	    				android:layout_height="wrap_content"
    	    				android:layout_weight="1"> 
    	    
    	    				<TextView 
    	    				     android:textColor="@android:color/white"
    	       					 android:textStyle="bold"
    	       					 android:layout_width="wrap_content"
    	       					 android:layout_height="wrap_content"
    	        				 android:text="@string/image"/>
    	   					 <ImageButton 
    	        				android:clickable="false"
    	        				android:layout_width="wrap_content"
    	        				android:layout_height="wrap_content"
    	        				android:background="@drawable/photo_fav_hd"/>
    	    
    	   					<TextView 
    	   					    android:textColor="@android:color/white"
    	   					    android:id="@+id/pSize"
    	        				android:layout_width="wrap_content"
    	        				android:layout_height="wrap_content"
    	        				android:text="@string/zerosize"/>
    						<TextView 
    						    android:textColor="@android:color/white"
    						    android:id="@+id/pFiles"
    	        				android:layout_width="wrap_content"
    	        				android:layout_height="wrap_content"
    	        				android:text="@string/zerofiles"/>
    			</LinearLayout>
    			
    		</LinearLayout>
    
			<LinearLayout
        		android:layout_width="fill_parent"
        		android:layout_height="wrap_content"
        		android:orientation="horizontal">
    			<LinearLayout 
    	    		android:id="@+id/videos"
    	    		android:orientation="vertical"
    	     		android:layout_margin="3dp"
    	    		android:clickable="true"
    	    		android:focusable="true"
    	    		android:background="@drawable/video_selector_hd"
    	    		android:layout_gravity="center"
    	    		android:gravity="center"
    	    		android:layout_width="fill_parent"
    	    		android:layout_height="wrap_content"
    	    		android:layout_weight="1"> 
    	    		<TextView 
    	    		    android:textColor="@android:color/white"
    	        		android:textStyle="bold"
    	        		android:layout_width="wrap_content"
    	        		android:layout_height="wrap_content"
    	        		android:text="@string/vids"/>
    	    
    	   			<ImageButton 
    	        		android:clickable="false"
    	        		android:layout_width="wrap_content"
    	        		android:layout_height="wrap_content"
    	        		android:background="@drawable/video_fav_hd"/>
    	    
    	  			<TextView 
    	  		    	android:textColor="@android:color/white"
    	  		    	android:id="@+id/vSize"
    	        		android:layout_width="wrap_content"
    	        		android:layout_height="wrap_content"
    	        		android:text="@string/zerosize"/>
    				<TextView 
    				    android:textColor="@android:color/white"
    				    android:id="@+id/vFiles"
    	        		android:layout_width="wrap_content"
    	        		android:layout_height="wrap_content"
    	        		android:text="@string/zerofiles"/>
    			</LinearLayout>
    	
    			<LinearLayout 
   					    android:id="@+id/docs"
   	    				android:layout_margin="3dp"
   	    				android:clickable="true"
   	    				android:focusable="true"
   	    				android:background="@drawable/doc_selector_hd"
   	    				android:layout_gravity="center"
   	    				android:gravity="center"
   	    				android:layout_width="fill_parent"
   	    				android:layout_height="wrap_content"
   	    				android:layout_weight="1"
   	    				android:orientation="vertical">
   	    				<TextView 
   	    				    android:textColor="@android:color/white"
   	       					android:textStyle="bold"
   	        				android:layout_width="wrap_content"
   	       					android:layout_height="wrap_content"
   	        				android:text="@string/docs"/> 
   	   					<ImageButton 
   	      					android:clickable="false"
   	     					android:layout_width="wrap_content"
   	      					android:layout_height="wrap_content"
   	        				android:background="@drawable/docs_fav_hd"/>
   	    				<TextView 
   	    				    android:textColor="@android:color/white"
   	    			    	android:id="@+id/dSize"
   	        				android:layout_width="wrap_content"
   	        				android:layout_height="wrap_content"
   	        				android:text="@string/zerosize"/>
   						<TextView 
   						    android:textColor="@android:color/white"
   					    	android:id="@+id/dFile"
   	        				android:layout_width="wrap_content"
   	        				android:layout_height="wrap_content"
   	        				android:text="@string/zerofiles"/>
				   	</LinearLayout>
    	    	
    		</LinearLayout>
			
			<LinearLayout
        		android:layout_width="fill_parent"
        		android:layout_height="wrap_content"
        		android:orientation="horizontal">
    	
    			<LinearLayout 
    	    		android:id="@+id/zips"
    				android:orientation="vertical"
    	     		android:layout_margin="3dp"
    	    		android:clickable="true"
    	    		android:focusable="true"
    	    		android:background="@drawable/archive_selector_hd"
    	    		android:layout_gravity="center"
    	    		android:gravity="center"
    	    		android:layout_width="fill_parent"
    	    		android:layout_height="wrap_content"
    	    		android:layout_weight="1">  
    	    		<TextView 
    	    		    android:textColor="@android:color/white"
    	        		android:textStyle="bold"
    	        		android:layout_width="wrap_content"
    	        		android:layout_height="wrap_content"
    	        		android:text="@string/archivefiles"/>
    	    		<ImageButton 
    	        		android:clickable="false"
    	        		android:layout_width="wrap_content"
    	        		android:layout_height="wrap_content"
    	        		android:background="@drawable/archive_fav_hd"/>
    	    
    	    		<TextView 
    	    		    android:textColor="@android:color/white"
    	    			android:id="@+id/zSize"
    	        		android:layout_width="wrap_content"
    	        		android:layout_height="wrap_content"
    	        		android:text="@string/zerosize"/>
    				<TextView 
    				    android:textColor="@android:color/white"
    				    android:id="@+id/zFiles"
    	       			android:layout_width="wrap_content"
    	       			android:layout_height="wrap_content"
    	       			android:text="@string/zerofiles"/>
    			</LinearLayout>
    			
    			<LinearLayout 
    	    		android:id="@+id/misc"
    	    		android:orientation="vertical"
    	     		android:layout_margin="3dp"
    	    		android:clickable="true"
    	    		android:focusable="true"
    	   	 		android:background="@drawable/unknown_selector_hd"
    	    		android:layout_gravity="center"
    	    		android:gravity="center"
    	    		android:layout_width="fill_parent"
    	    		android:layout_height="wrap_content"
    	    		android:layout_weight="1">   
    	    
    	   			<TextView 
    	   			    android:textColor="@android:color/white"
    	        		android:textStyle="bold"
    	        		android:layout_width="wrap_content"
    	       	 		android:layout_height="wrap_content"
    	        		android:text="@string/mis"/>
    	    		<ImageButton 
    	        		android:clickable="false"
    	        		android:layout_width="wrap_content"
    	        		android:layout_height="wrap_content"
    	        		android:background="@drawable/unknown_fav_hd"/>
    	    
    	    		<TextView 
    	    		    android:textColor="@android:color/white"
    	        		android:id="@+id/misFiles"
    	        		android:layout_width="wrap_content"
    	        		android:layout_height="wrap_content"
    	        		android:text="@string/zerosize"/>
    				<TextView 
    				    android:textColor="@android:color/white"
    	    			android:id="@+id/misSize"
    	    			android:layout_width="wrap_content"
    	        		android:layout_height="wrap_content"
    	        		android:text="@string/zerofiles"/>
    			</LinearLayout>
    			
    		</LinearLayout>
    		
		</LinearLayout>
	
	<!-- end of scroll view...-->
	</ScrollView>
  </LinearLayout>
        
  <ListView 
      	android:background="@android:color/white"
        android:paddingTop="5dp"
        android:visibility="gone"
        android:dividerHeight="0.03dp"
        android:divider="@color/transparent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/customListView"/>
 
  <LinearLayout 
      android:background="@android:color/white"
      android:id="@+id/empty"
      android:gravity="center"
      android:visibility="gone"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">
      
      <ImageView 
          android:background="@drawable/no_item_hd"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>
      
      <TextView 
          android:text="@string/empty_list"
          android:textStyle="bold"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>
      
  </LinearLayout>
    
</LinearLayout>