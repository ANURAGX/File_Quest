<LinearLayout 
    
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="30dp"
    android:layout_marginLeft="8dp"
    android:orientation="vertical" >
	
    <LinearLayout 
        android:paddingBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView 
    		android:background="@drawable/file_quest_icon"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"/>
        
    	<TextView 
        	android:paddingRight="30dp"
       		android:gravity="center"
      		android:textColor="@android:color/white"
       		android:paddingTop="10dp"
    		android:paddingLeft="10dp"
       		android:textSize="16sp"
       		android:textStyle="bold"
       		android:layout_width="wrap_content"
       		android:layout_height="wrap_content"
       		android:text="@string/manage"/>
    </LinearLayout>
    
    <LinearLayout
            android:clickable="true"
        	android:layout_marginLeft="1dp" 
        	android:orientation="horizontal" 
        	android:layout_width="match_parent"
        	android:layout_height="60dp">
        	<ImageView 
            	android:background="@drawable/device"
        		android:layout_width="60dp"
        		android:layout_height="60dp"/>
        
        	<TextView 
        	    android:gravity="center_vertical"
            	android:id="@+id/dev_id"
            	android:textColor="@android:color/white"
    	        android:paddingLeft="10dp"
            	android:textStyle="bold"
            	android:layout_width="match_parent"
            	android:layout_height="match_parent"
            	android:text="@string/unknown"/>
    </LinearLayout>
    
    <ExpandableListView 
	    android:fastScrollEnabled="true"
	    android:scrollbarStyle="outsideInset"
	    android:paddingTop="10dp"
	    android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:id="@+id/drawer_menu_list"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:divider="@color/transparent"
	    android:dividerHeight="0.03dp"
	    android:listSelector="@drawable/while_list_selector_hd"
	    android:groupIndicator="@null"
	    android:childDivider="@color/transparent"/>
</LinearLayout>
