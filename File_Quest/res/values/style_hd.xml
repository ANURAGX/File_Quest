<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:actionButtonStyle">@style/ActionButtonPaddingStyle</item>
        <item name="actionButtonStyle">@style/ActionButtonPaddingStyle</item>
    	<item name="android:actionOverflowButtonStyle">@style/OverFlowMenuStyle</item>
    	<item name="actionOverflowButtonStyle">@style/OverFlowMenuStyle</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    	<item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>  
        <item name="android:actionBarStyle">@style/ActionBarTheme</item>   
        <item name="android:textColor">@android:color/black</item>   
    </style>
    
    <!-- Theme for action Bar -->
    <style name="ActionBarTheme" parent="android:Widget.Holo.ActionBar">
        <item name="android:titleTextStyle">@style/ActionBarThemeTitleStyle</item>
    </style>

    <!-- Theme for action Bar -->
    <style name="ActionBarThemeTitleStyle" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textStyle">bold</item>
    </style>
    
    <!--BASE STYLE FOR DIALOG.... -->	
    <style name="Base_Dialog" parent="@android:style/Theme.Translucent">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    
    
    <!--ORANGE STYLE FOR DIALOG.... -->	
    <style name="Dialog_Orange" parent="@style/Base_Dialog">
        <item name="android:windowBackground">@color/orange</item>
    </style>
    
    <!--RED STYLE FOR DIALOG.... -->	
    <style name="Dialog_Red" parent="@style/Base_Dialog">
        <item name="android:windowBackground">@color/red</item>
    </style>
    
    <!--GREY STYLE FOR DIALOG.... -->	
    <style name="Dialog_Grey" parent="@style/Base_Dialog">
        <item name="android:windowBackground">@color/grey</item>
    </style>
    
    <!--GREEN STYLE FOR DIALOG.... -->	
    <style name="Dialog_Green" parent="@style/Base_Dialog">
        <item name="android:windowBackground">@color/green</item>
    </style>
    
    <!--BLUE STYLE FOR DIALOG.... -->	
    <style name="Dialog_Blue" parent="@style/Base_Dialog">
        <item name="android:windowBackground">@color/blue</item>
    </style>
    
    <!--VIOLET STYLE FOR DIALOG.... -->	
    <style name="Dialog_Violet" parent="@style/Base_Dialog">
        <item name="android:windowBackground">@color/violet</item>
    </style>
    
    <!-- this style is used only to reduce the padding between action buttons in action bar -->
    <style name="ActionButtonPaddingStyle" parent="@android:style/Widget.Holo.Light.ActionButton">
        <item name="android:padding">0dip</item>
        <item name="android:minWidth">42dip</item>
    </style>
    
    <!-- style to override black overflow menu icon of action bar.... -->
    <style name="OverFlowMenuStyle" parent="@style/Widget.AppCompat.ActionButton.Overflow">
   		<item name="android:src">@drawable/action_settings</item>     
    </style>
    
</resources>
